/* pages/category/index.wxss */

.total_bar {
  width: 100%;
  background-color: white;
  justify-content: space-between;
  height: 90rpx;
  align-items: center;
  display: flex;
  border-bottom-color: gray;
  border-bottom-style: solid;
  border-bottom-width: 0.5rpx;
}

.totol_icon {
  width: 30rpx;
  height: 30rpx;
  display: inline-flex;
  padding-left: 30rpx;
}

.total_bar_textcontainer {
  display: inline-flex;
  line-height: 30rpx;
  padding-right: 30rpx;
}

.normal_text {
  font-size: 28rpx;
  color: #343333;
}

.red_text {
  font-size: 28rpx;
  color: red;
}

.cates_button_container {
  background: white;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.cate_button {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: gray;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}

.cate_button_img {
  width: 70rpx;
  height: 70rpx;
}

.cate_button_name {
  padding-top: 10rpx;
}

.notice_bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
  height: 70rpx;
  width: 100%;
}

.notice_title {
  display: inline-block;
  padding-left: 24rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.notice_swiper {
  flex: 1;
  height: 100%;
  padding-left: 24rpx;
}

.notice_content {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

/* tab 样式设置 tabbar目录下设置 */

.cates_list {
  height: 1000rpx;
  width: 100%;
}

.cell {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-top: 14rpx;
  padding: 24rpx;
}

.title_section {
  justify-content: space-between;
  align-items: center;
}

.row_container {
  display: flex;
  flex-direction: row;
}

.column_container {
  display: flex;
  flex-direction: column;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.cell_avatar {
  width: 100rpx;
  height: 100rpx;
  background-color: red;
}

.cell_title {
  display: inline-block;
  color: rgb(17, 78, 78);
  font-size: 30rpx;
}

.cell_thumbnail_container {
  padding-top: 14rpx;
  justify-content: space-between;
}

.cell_thumbnail {
  width: 165rpx;
  height: 165rpx;
  background-color: red;
}

.cell_content {
  display: block;
  font-size: 28rpx;
  padding-top: 14rpx;
}

.date_container {
  font-size: 24rpx;
  padding-top: 10rpx;
}

.cell_location_container {
  padding-top: 5rpx;
  display: flex;
  align-items: center;
}

.cell_location_icon {
  width: 24rpx;
  height: 24rpx;
  background-color: red;
}

.cell_location_text {
  font-size: 24rpx;
  padding-left: 8rpx;
}

.cell_visit_container {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  align-items: center;
}

.cell_visit_icon {
  background-color: rebeccapurple;
  width: 24rpx;
  height: 24rpx;
}

.cell_visit_number {
  display: inline-flex;
  padding-left: 8rpx;
  color: blue;
}

.cell_zan_icon {
  background-color: rebeccapurple;
  width: 24rpx;
  height: 24rpx;
  margin-left: 14rpx;
}
